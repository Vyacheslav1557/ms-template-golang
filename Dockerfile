FROM golang:latest

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем файлы Go-приложения в рабочую директорию
COPY . .

# Собираем приложение (можно прописать дополнительные команды сборки здесь)
RUN go build ./cmd/ms-template-golang/main.go

# Команда для запуска приложения при старте контейнера
CMD ["./main"]